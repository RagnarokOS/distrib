# Installing cwm and vifm here to avoid its recommended packages
# without disabling apt recommends globally.
inst_pkgs() {
	apt-get install --no-install-recommends cwm vifm -y
}

# update man pages
upd_man() {
	makewhatis /usr/share/man
}

permissions() {
	chmod 755 /usr/local/bin/*
	chmod 755 /etc/init.d/hardened_malloc
}

# Alias root to user for mail delivery
mail_aliases() {
	printf '%s\n' "root:	user" > /etc/aliases
}

hardened_malloc_init() {
	/usr/sbin/update-rc.d hardened_malloc defaults
}

main() {
	setup_wheel
	set_shell
	set_sym
	inst_pkgs
	upd_man
#	mk_devuser
	mail_aliases
	permissions
	hardened_malloc_init
}

main
