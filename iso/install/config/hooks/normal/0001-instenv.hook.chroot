#!/bin/sh

# $Ragnarok: 0001-instenv.hook.chroot,v 1.7 2024/11/20 15:59:57 lecorbeau Exp $

set -e

set_rootpass() {
	# setting a password for the root account
	# since it's useful.
	echo "root:root" | chpasswd
}

# Set the default frontend to readline
set_frontend() {
	echo 'debconf debconf/frontend select Readline' | debconf-set-selections
}

main() {
	set_rootpass
	set_frontend
}

main
